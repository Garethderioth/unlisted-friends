{
  "name": "unlisted-friends",
  "description": "A library for verify which following friends on Twitter that are not in your lists.",
  "main": "dist/index.js",
  "scripts": {
    "test": "ava 'tests/**/*.test.js' --verbose",
    "watch:test": "ava 'tests/**/*.test.js' --verbose --watch",
    "build": "babel src -d dist",
    "check-coverage": "echo \"Error: no coverage specified\"",
    "report-coverage": "echo \"Error: no report coverage specified\"",
    "precommit": "npm run build && git add dist",
    "commit": "git-cz",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Garethderioth/unlisted-friends.git"
  },
  "keywords": [
    "twitter",
    "unlisted",
    "friends",
    "lists"
  ],
  "author": "Guillermo Rodas <garethderioth@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "twit": "2.2.2"
  },
  "engines": {
    "node": "4.3.2"
  },
  "devDependencies": {
    "ava": "0.13.0",
    "babel-cli": "6.6.5",
    "babel-preset-es2015": "6.6.0",
    "babel-preset-stage-0": "6.5.0",
    "babel-register": "6.7.2",
    "commitizen": "2.7.2",
    "cz-conventional-changelog": "1.1.5",
    "eslint": "2.4.0",
    "eslint-config-airbnb": "6.1.0",
    "ghooks": "1.1.1",
    "semantic-release": "^4.3.5"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run test && npm run check-coverage"
    }
  },
  "ava": {
    "require": "babel-register",
    "babel": "inherit"
  }
}
